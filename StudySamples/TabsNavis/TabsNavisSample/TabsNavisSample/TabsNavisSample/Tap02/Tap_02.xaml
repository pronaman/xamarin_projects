<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabsNavisSample.Tap_02"
             Title="2번">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="뒤로가기 버튼"
                   FontSize="Large"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />

            <Button x:Name="NaviBtn"
                    Text="Navi 01 Navi"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    Clicked="OnNaviBack_01_Clicked" />

            <Button Text="Navi 02 Modal"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    Clicked="OnNaviBack_02_Clicked" />

            <Button Text = "뒤로가기"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                Clicked="OnBackPageClicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>