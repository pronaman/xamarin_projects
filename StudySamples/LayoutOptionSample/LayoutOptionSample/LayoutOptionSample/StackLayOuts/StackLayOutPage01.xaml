<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutOptionSample.StackLayOuts.StackLayOutPage01"
             Title="1 번">
    <ContentPage.Content>
        <StackLayout Spacing="5" x:Name="layout">
            <Button Text="Spacing: 0"  
                    FontSize="20" 
                    VerticalOptions="Start" 
                    HorizontalOptions="FillAndExpand" 
                    x:Name="StackChangeButton" 
                    Clicked="StackChangeButton_Clicked"/>

            <BoxView Color="Yellow" 
                     VerticalOptions="FillAndExpand" 
                     HorizontalOptions="FillAndExpand" />

            <BoxView Color="Green" 
                     VerticalOptions="FillAndExpand" 
                     HorizontalOptions="FillAndExpand" />

            <BoxView HeightRequest="75" Color="Blue" 
                     VerticalOptions="End" 
                     HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>