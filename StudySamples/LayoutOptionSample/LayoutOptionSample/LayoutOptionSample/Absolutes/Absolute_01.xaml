<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutOptionSample.Absolutes.Absolute_01"
             Title="AbsPage01">
    
    <ContentPage.Content>
        <AbsoluteLayout>
            <Label Text="라벨 1 위치" 
                   AbsoluteLayout.LayoutBounds="115,150,100,100" 
                   LineBreakMode="WordWrap" 
                   FontSize="20"  
                   BackgroundColor="SkyBlue"/>

            <Label Text="라벨 2 기준 위치" 
                   AbsoluteLayout.LayoutBounds="0.5, 1, 0.5, 0.1" 
                   AbsoluteLayout.LayoutFlags="All" 
                   FontSize="20" 
                   LineBreakMode="WordWrap"
                   BackgroundColor="SkyBlue"/>

            <BoxView Color="Olive"  
                     AbsoluteLayout.LayoutBounds="1, .5, 25, 100" 
                     AbsoluteLayout.LayoutFlags="PositionProportional" />

            <BoxView Color="Red" 
                     AbsoluteLayout.LayoutBounds="0, .5, 25, 100" 
                     AbsoluteLayout.LayoutFlags="PositionProportional" />

            <BoxView Color="Blue" 
                     AbsoluteLayout.LayoutBounds=".5, 0, 100, 25" 
                     AbsoluteLayout.LayoutFlags="PositionProportional" />

        </AbsoluteLayout>
    </ContentPage.Content>
    
</ContentPage>